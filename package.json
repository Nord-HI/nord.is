{
  "name": "nord.js",
  "scripts": {
    "postinstall": "npm run build",
    "start": "NODE_ENV=development node start.js",
    "start-prod": "NODE_ENV=production node start.js",
    "build": "npm run clean && webpack -p --progress --config webpack.production.config.js",
    "docker-test": "ava",
    "test": "docker-compose up",
    "clean": "rm -rf built",
    "lint": "eslint --ext \"js\" ."
  },
  "ava": {
    "verbose": true,
    "failFast": true,
    "files": [
      "src/**/__tests__/**/*.js"
    ],
    "source": [
      "src/**/*",
      "!build/**/*",
      "!build_support/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "devDependencies": {
    "autoprefixer": "^6.0.2",
    "ava": "^0.12.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-resolver": "0.0.7",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "css-loader": "^0.18.0",
    "enzyme": "^2.0.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "0.4.0",
    "eslint-plugin-import": "^1.10.1",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "0.9.0",
    "html-webpack-plugin": "2.22.0",
    "postcss-loader": "^0.6.0",
    "postcss-nested": "^1.0.0",
    "react-addons-test-utils": "^15.0.1",
    "react-hot-loader": "^1.3.0",
    "sinon": "^1.17.2",
    "style-loader": "^0.12.3",
    "supertest-koa-agent": "0.2.1",
    "url-loader": "0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-core": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "dotenv": "2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "koa": "2.0.0",
    "koa-convert": "1.2.0",
    "koa-logger": "2.0.0",
    "koa-router": "7.0.1",
    "koa-send": "3.2.0",
    "koa-sendfile": "2.0.0",
    "pg-promise": "5.1.2",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-router": "^2.0.0",
    "superagent": "^2.0.0"
  }
}
